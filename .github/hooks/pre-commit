#!/bin/sh
# Pre-commit hook: runs cargo fmt check and clippy before each commit.
# Install: cp .github/hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit
# Or:      git config core.hooksPath .github/hooks

set -e

echo "Running cargo fmt --check..."
cargo fmt --all -- --check
if [ $? -ne 0 ]; then
    echo "❌ cargo fmt failed. Run 'cargo fmt --all' to fix."
    exit 1
fi

echo "Running cargo clippy..."
cargo clippy -- -D warnings
if [ $? -ne 0 ]; then
    echo "❌ cargo clippy failed. Fix warnings before committing."
    exit 1
fi

echo "✅ Pre-commit checks passed."
